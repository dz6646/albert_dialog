<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only txt"
        android:onClick="albert1"
        android:textSize="18sp"
        android:padding="12dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text and Albert"
        android:onClick="albert2"
        android:textSize="18sp"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="And button"
        android:onClick="albert3"
        android:textSize="18sp"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two buttons"
        android:onClick="albert4"
        android:textSize="18sp"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three buttons"
        android:onClick="albert5"
        android:textSize="18sp"
        android:padding="12dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp" />

</LinearLayout>